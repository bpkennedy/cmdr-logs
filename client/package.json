    "time-grunt": "^1.0.0",
    "electron": "^1.4.14"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "pack": "build --dir",
    "dist:mac": "build -m",
        "dist:win": "build -w",
    "test": "karma start test/karma.conf.js"
  },
  "dependencies": {
    "angular-animate": "^1.6.1"
  },
  "build": {
        "appId": "com.bpkennedy.cmdr-logs",
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "category": "public.app-category.entertainment",
            "target": "dmg"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "publish": [
                "github"
            ]
        }
